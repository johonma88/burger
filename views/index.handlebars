<div class="border" style="width:100%"></div>

<div class="jumbotron jumbotron-fluid" style="font-family: 'Sirin Stencil', cursive; color:white; background-color:darkorange">
    <div class="container" style="text-align:center;">
        <h1 class="display-4"><strong>Eat-Da-Burger!!!</strong></h1>
        <p class="lead"><strong>Burger are so yummy!</strong></p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-5">
            <h2>Yummy Burgers Ready to Eat!</h2>
            <ul>

                {{#each burgers}} 
                {{#unless devoured}} 
                {{> burger/burger-block devoured=true}} 
                {{/unless}} {{/each}}

            </ul>
        </div>


        <div class="col-sm-5">
            <h2>Devoured Burgers!</h2>
            <ul>
                {{#each burgers}}
                 {{#if devoured}} 
                 {{> burger/burger-block devoured=false}} 
                 {{/if}} {{/each}}
            </ul>

        </div>
    </div>
</div>
<hr>

<div class="container" id="addBurger" >
<h2 style="font-family: 'Sirin Stencil', cursive; ">Add a Burger that you want to eat</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger_name">Burger Name:</label>
        <input type="text" id="burger_name" name="burger_name">
    </div>

    <button type="submit" id="addBtn">Add a Burger</button>
    <br><br>
</form>
</div>

